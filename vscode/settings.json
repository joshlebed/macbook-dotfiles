{
  // often edited
  "editor.lineNumbers": "off",
  "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange",
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "typescript.experimental.useTsgo": false,

  // the rest
  "editor.rulers": [100],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "always",
    "source.organizeImports": "always",
    "source.fixAll": "always",
    "source.fixAll.eslint": "always",
    "source.fixAll.ts": "never"
  },
  "vscode-color-picker.languages": [
    "php",
    "html",
    "css",
    "python",
    "jsonc",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "editor.glyphMargin": false,
  "window.openFoldersInNewWindow": "on",
  "window.restoreWindows": "all",
  "editor.autoClosingOvertype": "always",
  "editor.minimap.enabled": false,
  "workbench.editor.closeEmptyGroups": false,
  "workbench.colorCustomizations": {
    "statusBar.background": "#1A1A1A",
    "statusBar.noFolderBackground": "#212121",
    "statusBar.debuggingBackground": "#263238",
    "statusBarItem.remoteBackground": "#444",
    "tab.activeBorderTop": "#229fff",
    "terminal.foreground": "#D3D7CF",
    "terminal.background": "#300A24",
    "terminal.ansiBlack": "#300A24",
    "terminal.ansiBlue": "#3465A4",
    "terminal.ansiBrightBlack": "#555753",
    "terminal.ansiBrightBlue": "#729FCF",
    "terminal.ansiBrightCyan": "#34E2E2",
    "terminal.ansiBrightGreen": "#8AE234",
    "terminal.ansiBrightMagenta": "#EF2929",
    "terminal.ansiBrightRed": "#AD7FA8",
    "terminal.ansiBrightWhite": "#EEEEEE",
    "terminal.ansiBrightYellow": "#FCE94F",
    "terminal.ansiCyan": "#06989A",
    "terminal.ansiGreen": "#4E9A06",
    "terminal.ansiName": "Ubuntu",
    "terminal.ansiMagenta": "#75507B",
    "terminal.ansiRed": "#CC0000",
    "terminal.ansiWhite": "#D3D7CF",
    "terminal.ansiYellow": "#C4A000"
  },
  "workbench.colorTheme": "Monokai",
  "window.titleBarStyle": "custom",
  "workbench.startupEditor": "newUntitledFile",
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.editor.revealIfOpen": true,
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.fontFamily": "Fira Code",
  "terminal.integrated.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "terminal.integrated.cursorBlinking": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.tabSize": 2,
  "git.autorefresh": true,
  "editor.cursorSurroundingLines": 9999,
  "workbench.panel.defaultLocation": "right",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "prettier.tabWidth": 2,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "emmet.showExpandedAbbreviation": "never",
  "files.associations": {
    "packageInfo": "plaintext",
    ".gitconfig": "plaintext"
  },
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[jupyter]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "notebook.formatOnSave.enabled": true,

  "terminal.integrated.defaultProfile.linux": "zsh",
  "security.workspace.trust.untrustedFiles": "open",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.accessibilitySupport": "off",
  "terminal.integrated.env.osx": {
    "CW_NEW_SESSION": "1"
  },
  "workbench.editor.tabActionCloseVisibility": false,
  "window.zoomLevel": 2,
  "scm.showOutgoingChanges": "never",
  "git.autofetch": true,
  "git.confirmSync": false,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.scrollback": 10000,
  "cursor.cpp.disabledLanguages": ["scminput"],
  "workbench.activityBar.orientation": "vertical",
  "workbench.activityBar.location": "hidden",
  "workbench.editor.editorActionsLocation": "titleBar",
  "cursor.chat.terminalShowHoverHint": false,
  "terminal.integrated.smoothScrolling": false,
  "workbench.list.smoothScrolling": false,
  "editor.smoothScrolling": false,
  "editor.largeFileOptimizations": false,
  "githubPullRequests.terminalLinksHandler": "github",
  "security.promptForLocalFileProtocolHandling": false,
  "comments.visible": false,
  "githubPullRequests.pullBranch": "never",
  "update.releaseTrack": "prerelease",
  "typescript.tsserver.log": "off",
  "terminal.external.osxExec": "iTerm.app"
}
