{
  // frequently edited
  "editor.lineNumbers": "off",
  "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange",
  "editor.rulers": [100],

  // everything else
  "eslint.validate": ["javascript"],
  "editor.codeActionsOnSave": [
    "source.organizeImports"
    // "source.fixAll.eslint"
  ],
  "editor.glyphMargin": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "window.openFoldersInNewWindow": "on",
  "editor.autoClosingOvertype": "always",
  "editor.minimap.enabled": false,
  "workbench.editor.closeEmptyGroups": false,
  "workbench.colorCustomizations": {
    "statusBar.background": "#1A1A1A",
    "statusBar.noFolderBackground": "#212121",
    "statusBar.debuggingBackground": "#263238",
    "statusBarItem.remoteBackground": "#444",
    "terminal.foreground": "#D3D7CF",
    "terminal.background": "#300A24",
    "terminal.ansiBlack": "#300A24",
    "terminal.ansiBlue": "#3465A4",
    "terminal.ansiBrightBlack": "#555753",
    "terminal.ansiBrightBlue": "#729FCF",
    "terminal.ansiBrightCyan": "#34E2E2",
    "terminal.ansiBrightGreen": "#8AE234",
    "terminal.ansiBrightMagenta": "#EF2929",
    "terminal.ansiBrightRed": "#AD7FA8",
    "terminal.ansiBrightWhite": "#EEEEEE",
    "terminal.ansiBrightYellow": "#FCE94F",
    "terminal.ansiCyan": "#06989A",
    "terminal.ansiGreen": "#4E9A06",
    "terminal.ansiName": "Ubuntu",
    "terminal.ansiMagenta": "#75507B",
    "terminal.ansiRed": "#CC0000",
    "terminal.ansiWhite": "#D3D7CF",
    "terminal.ansiYellow": "#C4A000"
  },
  "workbench.colorTheme": "Monokai",
  "window.titleBarStyle": "custom",
  "workbench.startupEditor": "newUntitledFile",
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.editor.revealIfOpen": true,
  "workbench.list.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.fontFamily": "Fira Code",
  "terminal.integrated.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "terminal.integrated.cursorBlinking": true,
  "multiCommand.commands": [
    {
      "command": "multiCommand.hideSidebarAndToggleAuxiliaryBar",
      "sequence": [
        "workbench.action.closeSidebar",
        "workbench.action.toggleAuxiliaryBar"
      ]
    },
    {
      "command": "multiCommand.activateGitAndTerminal",
      "sequence": ["workbench.view.scm", "workbench.action.terminal.focus"]
    }
  ],
  "editor.acceptSuggestionOnCommitCharacter": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.tabSize": 2,
  "git.autorefresh": true,
  "editor.cursorSurroundingLines": 9999,
  "workbench.panel.defaultLocation": "right",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "prettier.tabWidth": 2,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "emmet.showExpandedAbbreviation": "never",
  "files.associations": {
    "packageInfo": "plaintext"
  },
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": ["source.organizeImports"]
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "gitlens.mode.active": "zen",
  "security.workspace.trust.untrustedFiles": "open",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.accessibilitySupport": "off",
  "workbench.activityBar.location": "hidden",
  "terminal.integrated.env.osx": {
    "CW_NEW_SESSION": "1"
  },
  "workbench.editor.tabActionCloseVisibility": false
}
